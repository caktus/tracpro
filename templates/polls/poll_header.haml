- load i18n
- load polls

.page-header
  %h2
    {{ poll }}

%ul.nav.nav-tabs{ style:"margin-bottom: 1em" }
  %li{ class:"{% if_url 'polls.poll_read' 'active' '' %}" }
    %a{ href:"{% url 'polls.poll_read' poll.pk %}" }
      - trans "Summary"
  %li{ class:"{% if_url 'polls.issue_filter' 'active' '' %}" }
    %a{ href:"{% url 'polls.issue_filter' poll.pk %}" }
      - trans "Issues"
